#!/bin/bash

if _testtest
then

    port=27
    if [ "$1" = "" ]
    then
        echo "USAGE: _xenon [on,off]"
        exit
    fi
    if [ "$1" = "on" ] || [ "$1" = "ON" ]
    then
        val=1
        echo "xenon     on `udtstr`" > /tmp/_xenonstat
    else
        val=0
        echo "xenon    off `udtstr`" > /tmp/_xenonstat
    fi
    
    _testing
    echo $val > /sys/class/gpio/gpio$port/value
    _catstat  

else
    echo " You must be in engineering mode to issue this command"
fi

