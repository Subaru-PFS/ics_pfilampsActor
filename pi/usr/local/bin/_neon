#!/bin/bash

if _testtest
then
    port=26
    if [ "$1" = "" ]
    then
        echo "USAGE: _neon [on,off]"
        exit
    fi
    if [ "$1" = "on" ] || [ "$1" = "ON" ]
    then
        val=1
        echo "neon      on `udtstr`" > /tmp/_neonstat
    else
        val=0
        echo "neon     off `udtstr`" > /tmp/_neonstat
    fi
    
    _testing
    echo $val > /sys/class/gpio/gpio$port/value
    
    _catstat
else
    echo " You must be in engineering mode to issue this command"
fi
